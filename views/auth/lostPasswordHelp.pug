extends ../includes/layout

block content
    body
        include ../includes/navbar
        section.hero.is-primary.is-fullheight
            .hero-body
                .container
                    .columns.is-centered
                        .column.is-5-tablet.is-4-desktop.is-3-widescreen
                            form.box(action='')
                                .field
                                    label.label(for='username') Email
                                    .control.has-icons-left
                                        input.input(type='email', placeholder='Email address', required='', id='username', name='username')
                                        span.icon.is-small.is-left
                                            i.fa.fa-envelope
                                .field
                                    button.button.is-success.is-fullwidth
                                        strong Reset my Password!
